<%= layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3 ">
    <div class="col-6 offset-3">
        <h1>Signup on Wanderlust</h1>
        <form action="/user/signup" method="POST" class="needs-validation" nonvalidate>  
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="title" name="username" id="username" class="form-control" required>
                <div class="valid-feedback"> Looks good!!!</div>
                <div class="invalid-feedback">Enter a valid Username <title></title></div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="title" name="email" id="email" class="form-control" required>
                <div class="valid-feedback"> Looks good!!!</div>
                <div class="invalid-feedback">Enter a valid email <title></title></div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input type="password" id="title" name="password" id="password" class="form-control" required>
                <div class="valid-feedback"> Looks good!!!</div>
                <div class="invalid-feedback">Enter a valid <title></title></div>
            </div>
            <button class="btn btn-success" >Sign up</button>
        </form>
    </div>
</div>