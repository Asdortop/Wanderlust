<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row ">
        <div class="col-8 offset-2">
    <form method="POST" action="/listings">
        <h2>Create New Listing</h2>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="listing[title]" placeholder="Enter a catchy title" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label" >Description:</label>
            <textarea id="description" name="listing[description]" placeholder="Describe about the place" class="form-control" required></textarea>
        </div>       
        <div class="mb-3">
            <label for="price" class="form-label" >Price:</label>
            <input type="number" id="price" name="listing[price]" placeholder="Eg: 1500" class="form-control" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="location" class="form-label" >Location:</label>
                <input type="text" id="location" name="listing[location]" placeholder="Eg: Hyderabad" class="form-control" required>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label" >Country:</label>
                <input type="text" id="country" name="listing[country]" placeholder="Eg: India" class="form-control" required>
            </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label" >Image</label>
            <input type="text" id="image" name="listing[image]" placeholder="Enter image URL/Link" class="form-control">
        </div>
        <br><br>
        <button class="btn btn-dark">Create Listing</button>
        <br><br><br>
    </form>
    </div>
    </div>
</body>
